# Cofense Customization Portal Configuration
# Copy this file to .env and fill in your values

# Database Configuration
# DB_TYPE: pgsql (PostgreSQL) or mysql (MySQL)
DB_TYPE=pgsql
DB_HOST=localhost
# DB_PORT: 5432 for PostgreSQL, 3306 for MySQL (auto-detected if not set)
DB_PORT=5432
DB_NAME=customization_portal
# DB_USER: postgres for PostgreSQL, root for MySQL (auto-detected if not set)
DB_USER=postgres
DB_PASS=your_database_password
# DB_SCHEMA: PostgreSQL schema name (not used for MySQL)
DB_SCHEMA=global

# For MySQL, use these settings instead:
# DB_TYPE=mysql
# DB_PORT=3306
# DB_USER=root

# Okta Configuration
# Get these values from your Okta Admin Console > Applications > Your App
OKTA_DOMAIN=your-domain.okta.com
OKTA_CLIENT_ID=your_client_id_here
OKTA_ISSUER=https://your-domain.okta.com/oauth2/default

# Application URLs
APP_URL=http://localhost
API_URL=http://localhost/api

# CORS Configuration
# Use * for development, specific domain for production
CORS_ALLOWED_ORIGINS=*
